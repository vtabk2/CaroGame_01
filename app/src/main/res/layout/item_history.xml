<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/text_history_index"
        android:layout_width="@dimen/text_history_index_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"/>

    <include layout="@layout/line_break_vertical"/>

    <TextView
        android:id="@+id/text_history_human_status"
        style="@style/text_history_item"/>

    <include layout="@layout/line_break_vertical"/>

    <TextView
        android:id="@+id/text_history_computer_status"
        style="@style/text_history_item"/>

    <include layout="@layout/line_break_vertical"/>

    <TextView
        android:id="@+id/text_history_level"
        style="@style/text_history_item"/>

    <include layout="@layout/line_break_vertical"/>

    <TextView
        android:id="@+id/text_history_time_game"
        style="@style/text_history_item"/>
</LinearLayout>